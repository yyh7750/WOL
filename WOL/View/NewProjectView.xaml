<Window x:Class="WOL.View.NewProjectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WOL.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="새 프로젝트 생성"
        Width="550"
        Height="450"
        Background="{StaticResource Gray100}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  헤더  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Style="{StaticResource Heading2}" Text="새 프로젝트 생성" />
            <TextBlock Margin="0,4,0,0"
                       Style="{StaticResource BodyText}"
                       Text="새로운 프로젝트 정보를 입력해주세요." />
        </StackPanel>

        <!--  입력 폼  -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Style="{StaticResource Heading3}" Text="프로젝트 이름" />
                <TextBox Margin="0,4,0,16"
                         Style="{StaticResource BodyText2}"
                         Text="{Binding Project.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Style="{StaticResource Heading3}" Text="설명 (선택 사항)" />
                <TextBox MinHeight="70"
                         Margin="0,4,0,0"
                         AcceptsReturn="True"
                         Style="{StaticResource BodyText2}"
                         Text="{Binding Project.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" />
            </StackPanel>
        </Border>

        <!--  버튼  -->
        <StackPanel Grid.Row="2"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Margin="0,0,8,0"
                    Command="{Binding SetProjectInfoCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Content="확인"
                    Style="{StaticResource PrimaryButton}" />
            <Button Content="취소"
                    IsCancel="True"
                    Style="{StaticResource DangerButton}" />
        </StackPanel>
    </Grid>
</Window>
