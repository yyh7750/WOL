<UserControl x:Class="WOL.View.ProgramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WOL.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Margin="0,16,0,0">
        <!--  프로그램 목록  -->
        <ItemsControl ItemsSource="{Binding Programs}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,8"
                            Padding="12"
                            Background="{StaticResource Gray100}"
                            CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1">
                                <TextBlock FontFamily="Bold"
                                           FontWeight="Medium"
                                           Text="{Binding Name}" />
                                <TextBlock Margin="0,2,0,0"
                                           Style="{StaticResource CaptionText}"
                                           Text="{Binding Path}" />
                            </StackPanel>

                            <Border Grid.Column="0"
                                    Margin="0,0,10,0"
                                    Padding="8,4"
                                    VerticalAlignment="Center"
                                    Background="{Binding Status, Converter={StaticResource ProgramStatusColorConverter}}"
                                    CornerRadius="4">
                                <TextBlock FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource White}"
                                           Text="{Binding StatusText}" />
                            </Border>

                            <Button Grid.Column="2"
                                    Margin="0,0,4,0"
                                    Command="{Binding DataContext.ProgramViewModel.StartProgramCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Content="실행"
                                    Style="{StaticResource SuccessButton}">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                        <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                        <Binding Path="." />
                                    </MultiBinding>
                                </Button.CommandParameter>
                            </Button>
                            <Button Grid.Column="3"
                                    Margin="0,0,4,0"
                                    Command="{Binding DataContext.ProgramViewModel.StopProgramCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Content="중지"
                                    Style="{StaticResource WarningButton}">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                        <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                        <Binding Path="." />
                                    </MultiBinding>
                                </Button.CommandParameter>
                            </Button>
                            <Button Grid.Column="4"
                                    Command="{Binding DataContext.ProgramViewModel.DeleteProgramCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Content="삭제"
                                    Style="{StaticResource DangerButton}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
